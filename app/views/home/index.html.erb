<% if current_user %>
  <div style="background-color:cornsilk;padding: 5px; height: 120px; width: 500px;">
    <div class="FL" style="margin: 5px; width: 120px;">
      <%= image_tag current_user.gravatar_url(:size => 110, :default => "identicon") %>
    </div>
    <div class="FL" style="margin: 5px; width: 330px; padding-left: 20px;">
      Name : <%= current_user.name %><br/>
      Email : <%= current_user.email %>
    </div>
  </div>
  <div style="height: 10px"></div>
  <div style="background-color:darkseagreen; padding: 10px; width: 500px;">
    <h1>Your Questions</h1>
  </div>
<% else %>
  <div style="background-color:darkseagreen; padding: 10px; width: 500px;">
    <h1>Latest Questions</h1>
  </div>
<% end %>
<div style="background-color: #ffffff;padding: 5px;">
  <% @questions.each do |question| %>
    <div style="background-color: bisque; padding: 0 0 5px 5px; width: 500px; color: cornflowerblue; border: 4px solid #fff;">
      <h3><%= question.title %></h3>
    </div>
  <% end %>
</div>